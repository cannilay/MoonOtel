                <label for="kisisayisi">Kişi Sayısı</label>
                @Html.DropDownListFor(m => m.kisiSayisi, new List<SelectListItem>
           {
                new SelectListItem { Text ="1", Value = "1"},
                new SelectListItem { Text ="2", Value = "2"},
                new SelectListItem { Text ="3", Value = "3"}
           }, new { @class = "form-control", @required = "required" })
            </div>
            <div class="form-group">
                <label for="giristarihi">Giriş Tarihi</label>
                @Html.TextBoxFor(m => m.girisTarihi, new { @class = "form-control", @placeholder = "Giriş Tarihi giriniz", @required = "required" })
            </div>
            <div class="form-group">
                <label for="cikistarihi">Çıkış Tarihi</label>
                @Html.TextBoxFor(m => m.cikisTarihi, new { @class = "form-control", @placeholder = "Çıkış Tarihi giriniz", @required = "required" })
            </div>
            @Html.HiddenFor(m => m.musteriID)
        </div>
        <div style="margin-top:15px">
            <button class="btn btn-info" type="submit">Düzenle</button>
        </div>
    </div>
}
